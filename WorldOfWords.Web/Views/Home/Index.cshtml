@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Your Word World</h1>
</div>

<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        var userStats = ViewBag.userStats;
        var boards = ViewBag.boards;
        <h2>Welcome, @userStats.UserName</h2>
        <div class="col-md-4">
            <strong>Играни Дъски</strong>
            @foreach (var board in boards)
            {
                <hr />
                <fieldset>
                    <legend>
                        <a href="">@board.Name</a>
                    </legend>
                    <ul>
                        <li>
                            Размер: @board.Size
                        </li>
                        <li>
                            <strong>Отворена до </strong>
                            @board.ExpirationDate.ToString("dd HH yy HH:MM")
                        </li>
                    </ul>
                </fieldset>
            }
        </div>
        <div class="col-md-4">
            <h3>Твоят профил:</h3>
            <ul>
                <li>@(userStats.Balance) голдъни</li>
                <li>@(userStats.EarnedPoints) точки</li>
            </ul>
            <div class="col-md-4">
            </div>
        </div>
    }
    @if (!User.Identity.IsAuthenticated)
    {
        var boards = ViewBag.boards;
        <h2>Welcome, Stranger!</h2>
        <div class="col-md-4">
            <strong>Игрални Дъски</strong>
            @foreach (var board in boards)
            {
                <hr />
                <fieldset>
                    <legend>
                        <a href="">@board.Name</a>
                    </legend>
                    <ul>
                        <li>
                            Размер: @board.Size
                        </li>
                        <li>
                            <strong>Отворена до </strong>
                            @board.ExpirationDate.ToString("dd HH yy HH:MM")
                        </li>
                    </ul>
                </fieldset>
            }
        </div>
        <div class="col-md-4">
            <h3>Wse още нямаш профил</h3>
            Регистрирай се и ще имаш възможност да се съревноваваш веднага <strong>безплатно.</strong>
            <div class="col-md-4">
            </div>
        </div>
    }
</div>